{
  "name": "books-about-food",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samtgarson/books-about-food.git"
  },
  "author": "samtgarson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samtgarson/books-about-food/issues"
  },
  "homepage": "https://github.com/samtgarson/books-about-food#readme",
  "workspaces": [
    "web",
    "admin",
    "packages/*"
  ],
  "cacheDirectories": [
    "web/.next/cache"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "eslint . --ignore-path ./.gitignore && prettier --check --ignore-path ./.prettierignore .",
    "format": "eslint . --ignore-path ./.gitignore --fix && prettier --write --ignore-path ./.prettierignore .",
    "dev": "turbo run dev",
    "heroku-postbuild": "turbo run build --filter admin"
  },
  "devDependencies": {
    "@books-about-food/eslint-config": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-prisma": "^4.8.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "turbo": "^1.6.3",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@books-about-food"
    ]
  },
  "prettier": "@samtgarson/eslint-config/prettier",
  "lint-staged": {
    "*.(json|md)": [
      "prettier --write"
    ],
    "*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "web/prisma/schema.prisma": [
      "prettier --write",
      "prisma format"
    ]
  }
}
