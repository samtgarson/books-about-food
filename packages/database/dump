#!/usr/bin/env bash

set -e

function dump () {
  local tmpfile=$(mktemp -t baf-backup.XXXXXX.sql)
  pg_dump \
    -t books \
    -t contributions \
    -t images \
    -t jobs \
    -t links \
    -t profiles \
    -t publishers \
    -t tags \
    --data-only \
    $PROD_DATABASE_URL > $tmpfile \
    && psql -d $DATABASE_URL -f $tmpfile || true
  rm $tmpfile
}

dump || rm /tmp/baf-backup.XXXXXX.sql
