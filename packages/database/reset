#!/usr/bin/env zsh

set -e

function dump () {
  local dir=$(mktemp -d)
  local prod_dump="$dir/baf-dump"
  local saved_content="$dir/baf-saved-content"

  pg_dump \
    -t accounts \
    -t users \
    -t claims \
    --data-only -Fc \
    $DATABASE_URL > $saved_content

  pg_dump \
    -t jobs \
    -t books \
    -t contributions \
    -t images \
    -t links \
    -t profiles \
    -t publishers \
    -t tags \
    -t features \
    -t _books_tags \
    -t _profiles_jobs \
    -t _authored_books \
    -t featured_profiles \
    -t frequently_asked_questions \
    --data-only -Fc \
    $PROD_DATABASE_URL > $prod_dump

  npx -w packages/database prisma migrate reset

  pg_restore --disable-triggers -d $DATABASE_URL $prod_dump || true
  pg_restore --disable-triggers -d $DATABASE_URL $saved_content || true
  rm -rf $dir
}

db_dir=${0:a:h}
export $(cat "$db_dir/.env" | grep -v '^#' | xargs)
if [[ -z "$DATABASE_URL" ]]; then
  echo "DATABASE_URL not set"
  exit 1
fi
if [[ -z "$PROD_DATABASE_URL" ]]; then
  echo "PROD_DATABASE_URL not set"
  exit 1
fi

dump
