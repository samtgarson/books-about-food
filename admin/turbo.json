{
  "extends": ["//"],
  "tasks": {
    "dev": {
      "with": ["@books-about-food/jobs#dev"]
    },
    "build": {
      "outputs": ["dist/**"]
    },
    "start": {
      "env": [
        "APPLICATION_PORT",
        "AWS_ACCESS_KEY_ID",
        "AWS_S3_BUCKET",
        "AWS_S3_ENDPOINT",
        "AWS_SECRET_ACCESS_KEY",
        "BASE_URL",
        "DATABASE_URL",
        "DATABASE_DIRECT_URL",
        "EDELWEISS_SESSION",
        "FOREST_AUTH_SECRET",
        "FOREST_ENV_SECRET",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "NODE_ENV",
        "S3_DOMAIN",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_DSN",
        "SMTP_HOST",
        "SMTP_PASS",
        "SMTP_PORT",
        "SMTP_SECURE",
        "SMTP_USER"
      ]
    }
  }
}
