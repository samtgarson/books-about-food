{
  "name": "admin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore && prettier --check --ignore-path ../.gitignore .",
    "format": "eslint . --ignore-path .gitignore --fix && prettier --write --ignore-path ../.gitignore .",
    "build": "swc ./src --out-dir ./api --config-file .swcrc",
    "start": "node ./api/index.js",
    "dev:build": "npm run build --watch",
    "dev:watch": "nodemon ./api/index.js -w ./src",
    "dev": "npm run build && npm-run-all --parallel dev:*"
  },
  "dependencies": {
    "@forestadmin/agent": "^1.5.5",
    "@forestadmin/datasource-sql": "^1.1.9",
    "express": "^4.18.2",
    "pg": "^8.8.0"
  },
  "eslintConfig": {
    "extends": [
      "@samtgarson/eslint-config",
      "@samtgarson/eslint-config/typescript"
    ]
  },
  "prettier": "@samtgarson/eslint-config/prettier",
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prettier --write",
      "prisma format"
    ]
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@types/express": "^4.17.15",
    "@types/sequelize": "^4.28.14",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5"
  }
}
